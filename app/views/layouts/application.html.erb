</head>

<% if user_signed_in? %>

    <% if session[:body].nil? %>
        <body id="landing">
    <% else %>
        <body id="<%= session[:body]%>">
    <% end %>

    <!--header-->
    <header id="top">
      <div class="container">
        <div class="row">
          <div class="span3" id="logo-header"><a href="<%= offers_path %>"><img src="/assets/logo-header.png"></a></div>

          <div class="span6 offset3 clearfix" id="header-data">
            <nav class="pull-left">
              <ul>
                <li class="user-message">Bienvenido <span><%= current_user.full_name%></span></li>
                <li>
                  <div class="btn-group">
                    <a class="btn btn-vontrip-grey dropdown-toggle" data-toggle="dropdown" href="#">
                      <i class="icon-user icon-white"></i> Mi Cuenta
                      <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu pull-right">
                      <li><a href="<%= user_path(current_user)%>">Reservas</a></li>
                      <li><a href="<%= users_gift_cards_path%>">Detalle de Cuentas</a></li>
                      <li><a href="<%= edit_user_path(current_user)%>">Información Personal</a></li>
                      <li><a href="<%= users_newsletter_freq_path%>">Preferencias</a></li>
                      <li><a href="<%= pages_faqs_path%>">Ayuda</a></li>
                      <li class="divider"></li>
                      <li><%= link_to "Salir", destroy_user_session_path, :method => :delete %></li>
                    </ul>
                  </div><!--end btn-group-->
                </li>
              </ul>
            </nav>
            <div id="recommend-to-friend" class="pull-right">
              <ul>
                <% if session[:body]!='page-micuenta' %>
                    <li><h2><a href="#myModalInvite" role="button"  data-toggle="modal">INVITAR AMIGOS</a></h2></li>
                    <li><h3><a href="#myModalInvite" role="button"  data-toggle="modal">Suma $30</a></h3></li>
                <% else %>

                    <li><h2><a href="<%= invitations_path%>" role="button"  data-toggle="modal">INVITAR AMIGOS</a></h2></li>
                    <li><h3><a href="<%= invitations_path%>" role="button"  data-toggle="modal">Suma $30</a></h3></li>
                <% end %>
              </ul>
            </div><!--end recommend-to-friend-->
          </div><!--end span6 offset3-->
        </div><!--end row-->
      </div><!--end container header-->
    </header><!--end header-->

    <%= yield %>
    <!--footer-->
    <footer id="footer-wrapper">
      <div class="container" >
        <div class="row" id="footer-top">
          <div class="span6 hidden-phone"><img id="footer-top-img" src="/assets/logo-footer.png"></div>
          <div class="span6">
            <ul id="custumer-support" class="pull-right">
              <li class="custumer-support-title">Atención al Cliente</li>
              <li class="telephone-number">0800-345-TRIP(8747)</li>
              <li class="contact-mail"><a href="<%= pages_contact_path %>"><i class="icon-contact-mail"></i> info@vontrip.com</a></li>
            </ul>
          </div>
        </div>

        <hr>

        <div id="footer-middle" class="row">
          <div class="span7">
            <nav>
              <ul class="inline">
                <li><a href="<%= pages_we_path%>">Quiénes Somos</a></li>
                <li><a href="<%= pages_work_with_us_path%>">Trabajá con Nosotros</a></li>
                <li><a href="<%= pages_terms_and_conds_path%>">Términos y Condiciones</a></li>
                <li><a href="<%= pages_faqs_path%>">Ayuda</a></li>
                <li><a href="<%= pages_contact_path%>">Contacto</a></li>
              </ul>
            </nav>
            <p class="copyright">Copyright © 2013 Vontrip.com. Todos los derechos reservados</p>
          </div>

          <div class="span5">
            <ul class="inline pull-right social">
              <li><a href="http://www.facebook.com/vontripargentina" target="_blank"><img src="/assets/icon-fb.png"></a></li>
              <li><a href="https://twitter.com/VonTripArg" target="_blank"><img src="/assets/icon-twitter.png"></a></li>
              <li><a href="https://plus.google.com/116522684361738618061" target="_blank"><img src="/assets/icon-gPlus.png"></a></li>

            </ul>
          </div>
        </div>

      </div>
    </footer><!--end footer-->



<% else %>

    <%= yield %>

<% end %>

