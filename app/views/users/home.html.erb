                  <h4 class="media-heading">Mapa</h4>
                  <h5> Mapa con las últimas ofertas </h5>
                </li>
                <li class="pull-right">
                  <a href="<%= users_home_map_path%>"><button type="button" class="btn btn-dealhunter medium full-width rounded-borders-btn" id="btn-inscribite">Ver Mapa</button></a>
                </li>
              </ul>
            </div><!--end wrapper-padding-->
          </div><!--end span4-->
        </div><!--end row-->

      </div>
    </div>
  </div>
</div>

