                    </div><!--end media-->

                <% end %>

                <div class="pagination">
                  <ul>
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&raquo;</a></li>
                  </ul>
                </div>
              </div>
              <div class="tab-pane fade" id="completadas">

                <% @offers.where('end_date < ?', Date.current).each do |offer| %>

                    <div class="media hotel-item">
                      <a class="pull-left" href="#">
                        <% unless offer.offer.photo.nil? %>
                            <img src="<%= offer.photo.photo_url(:list)%>" class="media-object">
                        <%end%>
                      </a>
                      <div class="media-body">
                        <h4 class="media-heading"><a href="<%= offer_path(offer)%>"><%= offer.title %></a></h4>
                        <h5><%=offer.start_date.strftime('%d/%m/%Y') %> / <%= offer.end_date.strftime('%d/%m/%Y')%></h5>
                        <p><%= offer.company.name %></p>
                      </div><!--end media-body-->
                    </div><!--end media-->

                <% end %>

                <div class="pagination">
                  <ul>
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">&raquo;</a></li>
                  </ul>
                </div>

              </div>

            </div>

          </article>

        </div>
        <!--end wrapper-->
      </div>
    </section>
    <!--end main content-->

    <!--sidebar-->
    <aside class="span4" style="background: none;">

      <div class="wrapper-padding rounded-borders light-shadowed" style="background: #ffffff;">

        <h2 class="rounded-borders-btn">Detalle de Cuenta</h2>
        <ul class="aside-nav">
          <li><a href="<%= users_offers_company_user_path %>" class="active">Mis Ofertas</a></li>
          <li><a href="<%= users_branches_company_user_path %>">Mis Sucursales</a></li>
