                            <img src="<%= offer.photo.photo_url(:list)%>" class="media-object">
                        <%end%>
                      </a>
                      <div class="media-body">
                        <h4 class="media-heading"><a href="<%= offer_path(offer)%>"><%= offer.title %></a></h4>
                        <h5><%=offer.start_date.strftime('%d/%m/%Y') %> / <%= offer.end_date.strftime('%d/%m/%Y')%></h5>
                        <p><%= offer.company.name %></p>
