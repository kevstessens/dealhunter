<div class="container" id="main-content">
  <div class="row">
    <section class="span8">
      <div id="recommend-to-friend" class="pull-right">
        <ul>
          <li><h2><a href="#myModalInvite" role="button"  data-toggle="modal">Nueva oferta</a></h2></li>

        </ul>
      </div><!--end recommend-to-friend-->
      <header class="out">
        <h2>Ofertas</h2>


      </header>

      <div class="wrapper-padding">

        <div class="wrapper">
          <article>

            <ul id="myTab" class="nav nav-tabs">
              <li class="active"><a href="#home" data-toggle="tab">Todas</a></li>
              <li><a href="#profile" data-toggle="tab">Activas</a></li>
              <li><a href="#completadas" data-toggle="tab">Finalizadas</a></li>
            </ul>

            <div id="myTabContent" class="tab-content">

              <div class="tab-pane fade in active clearfix" id="home">

                <% @offers.each do |offer| %>

